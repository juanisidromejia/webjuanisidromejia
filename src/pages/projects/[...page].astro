---
export const prerender = true;

import type { GetStaticPathsOptions, Page } from 'astro';
import { type CollectionEntry, getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Pagination from '../../components/Pagination.astro';
import ProjectPreview from '../../components/ProjectPreview.astro';
import siteConfig from '../../data/site-config';
import { sortItemsByDateDesc } from '../../utils/data-utils';
import { getTranslations, t } from '../../utils/i18n';

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
    const allProjects = await getCollection('projects');
    const projects = allProjects.sort(sortItemsByDateDesc);
    return paginate(projects, { pageSize: siteConfig.projectsPerPage || 6 });
}

type Props = { page: Page<CollectionEntry<'projects'>> };

const { page } = Astro.props;
const portfolio = page.data;
const translations = await getTranslations('es');
const allTranslations = {
    es: await getTranslations('es'),
    en: await getTranslations('en'),
    ru: await getTranslations('ru')
};
---

<BaseLayout
    title={t('projects_title', translations)}
    description={t('projects_description', translations)}
    image={{ src: '/dante-preview.jpg', alt: 'The preview of the site' }}
    showHeader={false}
>
    <h1 id="projects-title" class="mb-12 text-2xl leading-tight font-serif italic sm:mb-16 sm:text-4xl">{t('projects_title', translations)}</h1>
    {portfolio.map((project) => <ProjectPreview project={project} class="mb-10 sm:mb-12" />)}
    <Pagination page={page} class="my-16 sm:my-24" />
</BaseLayout>

<script is:inline define:vars={{ allTranslations }}>
    const updatePageContent = (lang) => {
        const translations = allTranslations[lang] || allTranslations.es;
        const titleEl = document.getElementById('projects-title');
        if (titleEl) titleEl.textContent = translations.projects_title;
        // Update document title if needed
        document.title = translations.projects_title;
    };

    // Listen to language changes
    document.addEventListener('languageChange', (e) => {
        updatePageContent(e.detail);
    });

    // Initial update
    updatePageContent(window.currentLang);
</script>
